{
  "name": "Gov Auto Fill",
  "{{chrome}}.manifest_version": 3,
  "{{firefox}}.manifest_version": 2,
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "96": "icon/96.png",
    "128": "icon/128.png"
  },
  "{{chrome}}.action": {
    "default_popup": "src/popup.html",
    "default_title": "GOV Auto Fill"
  },
  "{{firefox}}.browser_action": {
    "default_popup": "src/popup.html",
    "default_title": "GOV Auto Fill"
  },
  "background": {
    "{{chrome}}.service_worker": "src/scripts/background.ts",
    "{{firefox}}.scripts": ["src/scripts/background.ts"]
  },
  "content_scripts": [
    {
      "js": ["src/scripts/content.ts", "src/scripts/floating.ts"],
      "css": ["src/styles/floating.css"],
      "matches": ["https://dtaconnect.eohhs.mass.gov/*", "<all_urls>"],
      "run_at": "document_end"
    }
  ],
  "host_permissions": ["*://**", "<all_urls>"],
  "permissions": ["tabs", "activeTab", "storage"]
}
